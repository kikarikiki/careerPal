    <div class="row">
      <!--Video-->
      <div class="col-md-7 my-3 p-0">
        <div class="video" id="twilio-remote-video" data-controller="twilio" data-twilio-token-value="<%= @token %> " data-twilio-target="mediaDiv">
          <span class="twilio-remote-name">
            <span>Name</span>
          </span>
          <span class="timer">
            <span id="timer" data-controller="countdown-timer" data-countdown-timer-target="time">30:00</span>
